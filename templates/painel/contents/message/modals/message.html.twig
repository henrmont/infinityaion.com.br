{# The Modal #}
<div class="modal fade" id="messageView">
  <div class="modal-dialog">
    <div class="modal-content">

      {# Modal Header #}
      <div class="modal-header">
        <h4 class="modal-title" name="title"></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      {# Modal body #}
      <div class="modal-body">
        <div><small name="date" style="color: red;"></small></div>
        <hr>
        <div style="margin-top: 20px;"><p name="text"></p><div>
      </div>

      {# Modal footer #}
      <div class="modal-footer">
        <button type="button" class="btn btn-red" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>