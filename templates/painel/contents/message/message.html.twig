{% extends 'painel/painel.html.twig' %}

{% block content %}
<div class="container">
    <div class="row" id="title" style="margin-bottom:20px;">
        <h1>Mensagens</h1>
    </div>
    <div class="card" style="background-color:rgb(240,240,240);">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-hover" id="tableMessage">
                        <thead>
                            <tr>
                                <th width="30%" class="text-center">Data</th>
                                <th width="50%" class="text-center">TÃ­tulo</th>
                                <th width="10%"></th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in data %}
                                <tr>
                                    <td class="text-center">{{ item.createdAt|format_datetime() }}</td>
                                    <td>{{ item.subject }}</td>
                                    <td class="text-center">
                                        <button type="button" class="rbtn-view" data-toggle="modal" data-target="#messageView" data-set="{{item.subject}}" data-time="{{item.createdAt|format_datetime()}}" data-text="{{item.text}}">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </td>
                                    <td class="text-center"><a href="message/del/{{item.id}}" class="rbtn-cancel" role="button"><i class="fa fa-trash"></i></a></td>
                                </tr>
                            {% endfor %}
                            {% include "painel/contents/message/modals/message.html.twig" %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4 text-center">
                    <div class="navigation">
                        {{ knp_pagination_render(data) }}
                    </div>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
