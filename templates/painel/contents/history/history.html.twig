{% extends 'painel/painel.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row" id="title" style="margin-bottom:10px;">
        <h1>Histórico</h1>
    </div>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-justified">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#itens">Histórico de Itens</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#coin">Histórico de Infinity Coins</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane container active" id="itens" style="border: 1px solid rgb(230,230,230); border-top:none;">
                <div class="card" style="background-color:rgb(240,240,240);">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th width="50%" class="text-center">Nome</th>
                                            <th width="20%" class="text-center">Quantidade</th>
                                            <th width="15%" class="text-center">Preço</th>
                                            <th width="15%" class="text-center">Personagem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in history_item %}
                                            <tr>
                                                <td>{{ item.item_name }}</td>
                                                <td class="text-center">{{ item.amount }}</td>
                                                <td class="text-center">{{ item.price }}</td>
                                                <td class="text-center">{{ item.player_name }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane container fade" id="coin" style="border: 1px solid rgb(230,230,230); border-top:none;">
                <div class="card" style="background-color:rgb(240,240,240);">
                    <div class="card-body">
                        <div class="row" style="min-height: 90vh;">
                            <div class="col-lg-12">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th width="35%" class="text-center">Pacote</th>
                                            <th width="15%" class="text-center">Quantidade</th>
                                            <th width="15%" class="text-center">Preço</th>
                                            <th width="35%" class="text-center">Data</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in history_coin %}
                                            <tr>
                                                <td>Pacote Infinity Coin - {{ item.amount }}</td>
                                                <td class="text-center">{{ item.amount }}</td>
                                                <td class="text-center">R$ {{ item.price }},00</td>
                                                <td class="text-center">{{ item.modifiedAt|format_datetime() }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
{% endblock %}
