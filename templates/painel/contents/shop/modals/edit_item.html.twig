{# The Modal #}
<div class="modal fade" id="editShopItem">
  <div class="modal-dialog">
    <div class="modal-content">

      {# Modal Header #}
      <div class="modal-header">
        <h4 class="modal-title">Editar Categoria</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      {# Modal body #}
      <div class="modal-body">
        <form name="formshop" action="{{ path('shop_edit') }}">
          <input name="id" type="hidden" value="">
          <div class="form-group">
          <label for="charselect">Selecione um Personagem:</label>
          <select class="form-control" id="charselect" name="selchar">
            {% for item in players %}
              <option value="{{ item.id }}|{{ item.name }}">{{ item.name }}</option>
            {% endfor %}
          </select>
          </div>
          <div class="form-group" id="amount">
            <label for="amount">Amount:</label>
            <input type="number" class="form-control" id="amount" name="amount">
          </div>
      </div>

      {# Modal footer #}
      <div class="modal-footer">
        <input type="submit" class="btn btn-info" value="Incluir">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
      </form>
    </div>
  </div>
</div>