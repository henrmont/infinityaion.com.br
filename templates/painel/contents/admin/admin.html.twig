{% extends 'painel/painel.html.twig' %}

{% block content %}
<div class="container title">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3>Painel Administrativo</h3>
        </div>
    </div>
    <div class="card" style="background-color:rgb(240,240,240); margin-top:20px;">
        <div class="card-body">
            <div class="row">
                <h4 style="margin-left: 50px;">Itens</h4>
            </div>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#incItem">
                        Inserir Item
                    </button>
                    {% include "painel/contents/admin/modals/item_new.html.twig" %}
                </div>
                <div class="col-lg-4 text-center">
                    <a href="{{ path('admin_itens') }}" class="btn btn-info" role="button">Administrar Itens</a>
                </div>
                <div class="col-lg-4 text-center">
                    <a href="{{ path('admin_reply') }}" class="btn btn-info" role="button">Reenviar item.</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#incType">
                        Inserir Categoria
                    </button>
                    {% include "painel/contents/admin/modals/type_new.html.twig" %}
                </div>
                <div class="col-lg-4 text-center">
                    <a href="{{ path('admin_types') }}" class="btn btn-info" role="button">Administrar Categorias</a>
                </div>
                <div class="col-lg-4 text-center">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card" style="background-color:rgb(240,240,240); margin-top:20px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 style="margin-left: 50px;">Infinity Coin</h4>        
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 text-center">
                            <a href="{{ path('admin_coin') }}" class="btn btn-info" role="button">Administrar Infinity Coin</a>
                        </div>
                        <div class="col-lg-6 text-center">
                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#allVip">
                                Inserir allVip
                            </button>
                            {% include "painel/contents/admin/modals/all_vip.html.twig" %}
                        </div>
                    </div>
                </div>
            </div>        
        </div>
        <div class="col-lg-6">
            <div class="card" style="background-color:rgb(240,240,240); margin-top:20px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 style="margin-left: 50px;">Suporte</h4>        
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <a href="{{ path('admin_suport') }}" class="btn btn-info" role="button">Administrar Ticket's</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card" style="background-color:rgb(240,240,240); margin-top:20px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 style="margin-left: 50px;">Players</h4>        
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 text-center">
                            <a href="{{ path('admin_coin') }}" class="btn btn-info" role="button">Auditoria</a>
                        </div>
                        <div class="col-lg-6 text-center">
                            <a href="{{ path('admin_player') }}" class="btn btn-info" role="button">Player Status</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 text-center">
                            <a href="{{ path('admin_posts') }}" class="btn btn-info" role="button">Controle de postagens</a>
                        </div>
                        <div class="col-lg-6 text-center">
                            <a href="{{ path('admin_comments') }}" class="btn btn-info" role="button">Controle de comentários</a>
                        </div>
                    </div>
                </div>
            </div>        
        </div>
        <div class="col-lg-6">
            <div class="card" style="background-color:rgb(240,240,240); margin-top:20px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 style="margin-left: 50px;">Orçamento</h4>        
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <a href="{{ path('admin_history') }}" class="btn btn-info" role="button">Histórico de coins</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card" style="background-color:rgb(240,240,240); margin-top:20px;">
        <div class="card-body">
            <div class="row">
                <h4 style="margin-left: 50px;">CMS</h4>
            </div>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <a href="{{ path('admin_cms_carousel') }}" class="btn btn-info" role="button">Carousel</a>
                </div>
                <div class="col-lg-4 text-center">
                    <a href="{{ path('admin_cms_notice') }}" class="btn btn-info" role="button">Notícias</a>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="col-lg-4 text-center">
                        <a href="{{ path('admin_cms_resource') }}" class="btn btn-info" role="button">Recursos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

{% endblock %}
