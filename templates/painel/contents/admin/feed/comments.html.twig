{% extends 'painel/painel.html.twig' %}

{% block content %}
<div class="container">
    <div class="row" id="title" style="margin-bottom:10px;">
        <h1>Hist√≥rico de Reports</h1>
    </div>
    <div class="card" style="background-color:rgb(240,240,240); margin-top:10px;">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="10%" class="text-center">PID</th>
                                <th width="30%" class="text-center">Nome</th>
                                <th width="50%" class="text-center">Texto</th>
                                <th width="5%" class="text-center"></th>
                                <th width="5%" class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in report %}
                                <tr>
                                    <td class="text-center">{{ item.pid }}</td>
                                    <td class="text-center">{{ item.name }}</td>
                                    <td class="text-left">{{ item.text }}</td>
                                    <td class="text-center">
                                        <div><a href="/feed/full/{{item.pid}}" class="rbtn-view"><i class="fa fa-eye"></i></a></div>
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="rbtn-cancel" data-toggle="modal" data-target="#notifyReport" data-id="{{ item.id }}" data-pid="{{ item.cid }}" data-url="{{ path('admin_notify_comment') }}">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            {% include "painel/contents/admin/modals/notify.html.twig" %}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 10px;">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 text-center" sty>
            <div class="navigation">
                {{ knp_pagination_render(report) }}
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>
{% endblock %}
