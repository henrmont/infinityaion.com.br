{% extends 'painel/painel.html.twig' %}

{% block content %}
<div class="container">
    <div class="row" id="title" style="margin-bottom:10px;">
        <h1>Administrar Tickets</h1>
    </div>
    <div class="row">
        <div class="col-lg-1 text-right">
            <form name="form-ticket" action="{{ path('admin_suport') }}">
            <label for="search" style="margin-top:5px;">Buscar:</label>
        </div>
        <div class="col-lg-4 text-left">
            <input type="text" class="form-control" name="search" style="margin-left:20px;">
        </div>
        <div class="col-lg-1 text-left">
            <input type="submit" class="btn btn-info" value="Filtrar">
            </form>
        </div>
        <div class="col-lg-6"></div>
    </div>
    <div class="card" style="background-color:rgb(240,240,240); margin-top:10px;">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="20%" class="text-center">ID</th>
                                <th width="45%" class="text-center">TÃ­tulo</th>
                                <th width="25%" class="text-center">Nome</th>
                                <th width="5%" class="text-center"></th>
                                <th width="5%" class="text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in data %}
                                <tr>
                                    <td class="text-center">{{ item.id }}</td>
                                    <td class="text-left">{{ item.Title }}</td>
                                    <td class="text-center">{{ item.name }}</td>
                                    <td class="text-center"><a href="suport/ticket/{{item.id}}" class="rbtn-check" role="button"><i class="fa fa-check"></i></a></td>
                                    {% if item.status == 'Open' %}
                                        <td class="text-center"><a href="suport/ticket/close/{{item.id}}" class="rbtn-cancel" role="button"><i class="fa fa-times"></i></a></td>
                                    {% else %}
                                        <td class="text-center"><i class="fa fa-times"></i></td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top: 10px;">
        <div class="col-lg-4"></div>
        <div class="col-lg-4 text-center">
            <div class="navigation">
                {{ knp_pagination_render(data) }}
            </div>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>
{% endblock %}
