{# The Modal #}
<div class="modal fade" id="feedReport">
  <div class="modal-dialog">
    <div class="modal-content">

      {# Modal Header #}
      <div class="modal-header">
        <h4 class="modal-title">Reportar Post</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      {# Modal body #}
      <div class="modal-body">
        <form name="formreport" action="">
          <input type="hidden" name="direct" value="">
          <input type="hidden" name="post" value="">
          <div class="form-group" id="postfeed">
            <label for="postreport">Mensagem:</label>
            <textarea class="form-control" rows="4" id="report" name="report"></textarea>
          </div>
      </div>

      {# Modal footer #}
      <div class="modal-footer">
        <input type="submit" class="btn btn-blue" value="Reportar">
        <button type="button" class="btn btn-red" data-dismiss="modal">Fechar</button>
      </div>
      </form>
    </div>
  </div>
</div>