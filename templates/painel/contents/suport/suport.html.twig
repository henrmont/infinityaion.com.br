{% extends 'painel/painel.html.twig' %}

{% block content %}
<div class="container">
    <div class="row" id="title" style="margin-bottom:20px;">
        <h1>Suport</h1>
    </div>
    <div class="row" style="margin-bottom:10px;">
        <div class="col-lg-9">
            <form name="form-ticket" class="form-inline" action="{{ path('suport') }}">
                <label for="search">Buscar:</label>
                <input type="text" class="form-control" name="search" style="margin-left:20px;">
                <button type="submit" class="btn btn-blue" style="margin-left:20px;">Buscar</button>
            </form>
        </div>
        <div class="col-lg-3 text-center">
            <button type="button" class="btn btn-green" data-toggle="modal" data-target="#TicketNew">
                Novo ticket
            </button>
            {% include "painel/contents/suport/modals/ticket_new.html.twig" %}
        </div>
    </div>
    <div class="card" style="background-color:rgb(240,240,240);">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">TÃ­tulo</th>
                                <th class="text-center">Data</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in data %}
                                <tr>
                                    <td class="text-center" width="20%">{{ item.id }}</td>
                                    <td width="40%">{{ item.Title }}</td>
                                    <td class="text-center" width="30%">{{ item.createdAt|format_date() }}</td>
                                    <td class="text-center" width="10%"><a href="/suport/ticket/{{item.id}}" class="rbtn-view" role="button"><i class="fa fa-eye"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4 text-center">
                    <div class="navigation">
                        {{ knp_pagination_render(data) }}
                    </div>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
